<p id="notice">Book was successfully created.</p>
<h1>Editing book</h1>
<% if @book.errors.any? %>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <p>error</p>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>
  <%= form_for(@book) do |f| %>
    <h4>title</h4>
  <%= f.text_field :title %>
    <h4>Body</h4>
  <%= f.text_area :body %>


  <%= f.submit 'Update Book' %>
  <%= link_to "Show", book_path(@book) %>
  <%= link_to "back", "/books" %>

<% end %>